# Security: Secure CORS Configuration for Multi-Tenant Platform
# Maintains Â£925K Odeon demo authentication (https://app.zebra.associates)

:{$PORT:80} {
    # Security: Disable automatic HTTPS redirect for Railway deployment
    auto_https off
    
    # Security: Environment-based allowed origins (production deployment)
    # Primary production origin for Odeon demo
    @cors_production header Origin "https://app.zebra.associates"
    # Development origins
    @cors_localhost header Origin "http://localhost:3001"
    @cors_dev header Origin "http://localhost:3000"
    # Vercel deployment origin (if needed)
    @cors_vercel header Origin "https://frontend-5r7ft62po-zebraassociates-projects.vercel.app"
    
    # Handle preflight OPTIONS requests with secure CORS
    @options method OPTIONS
    handle @options {
        handle @cors_production {
            header Access-Control-Allow-Origin "https://app.zebra.associates"
            header Access-Control-Allow-Credentials "true"
            header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, HEAD, PATCH"
            header Access-Control-Allow-Headers "Content-Type, Authorization, Accept, X-Requested-With, Origin, X-Tenant-ID"
            header Access-Control-Max-Age "600"
            respond "" 204
        }
        
        handle @cors_localhost {
            header Access-Control-Allow-Origin "http://localhost:3001"
            header Access-Control-Allow-Credentials "true"
            header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, HEAD, PATCH"
            header Access-Control-Allow-Headers "Content-Type, Authorization, Accept, X-Requested-With, Origin, X-Tenant-ID"
            header Access-Control-Max-Age "600"
            respond "" 204
        }
        
        handle @cors_dev {
            header Access-Control-Allow-Origin "http://localhost:3000"
            header Access-Control-Allow-Credentials "true"
            header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, HEAD, PATCH"
            header Access-Control-Allow-Headers "Content-Type, Authorization, Accept, X-Requested-With, Origin, X-Tenant-ID"
            header Access-Control-Max-Age "600"
            respond "" 204
        }
        
        handle @cors_vercel {
            header Access-Control-Allow-Origin "https://frontend-5r7ft62po-zebraassociates-projects.vercel.app"
            header Access-Control-Allow-Credentials "true"
            header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, HEAD, PATCH"
            header Access-Control-Allow-Headers "Content-Type, Authorization, Accept, X-Requested-With, Origin, X-Tenant-ID"
            header Access-Control-Max-Age "600"
            respond "" 204
        }
        
        # Security: Reject unauthorized origins without exposing internal details
        respond "Unauthorized" 403
    }
    
    # Handle all other requests by proxying to FastAPI backend
    reverse_proxy localhost:8000 {
        # Preserve original headers for proper forwarding
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
    }
    
    # CORS-002: Enhanced CORS headers injection for actual requests
    @cors_origin_custom header Origin "https://app.zebra.associates"
    @cors_origin_localhost header Origin "http://localhost:3001"
    @cors_origin_vercel header Origin "https://frontend-5r7ft62po-zebraassociates-projects.vercel.app"
    @cors_origin_dev header Origin "http://localhost:3000"
    
    # Inject appropriate Access-Control-Allow-Origin based on request origin
    header @cors_origin_custom {
        Access-Control-Allow-Origin "https://app.zebra.associates"
        Access-Control-Allow-Credentials "true"
        Access-Control-Expose-Headers "Content-Type, Authorization, X-Tenant-ID"
    }
    
    header @cors_origin_localhost {
        Access-Control-Allow-Origin "http://localhost:3001"
        Access-Control-Allow-Credentials "true"
        Access-Control-Expose-Headers "Content-Type, Authorization, X-Tenant-ID"
    }
    
    header @cors_origin_vercel {
        Access-Control-Allow-Origin "https://frontend-5r7ft62po-zebraassociates-projects.vercel.app"
        Access-Control-Allow-Credentials "true"
        Access-Control-Expose-Headers "Content-Type, Authorization, X-Tenant-ID"
    }
    
    header @cors_origin_dev {
        Access-Control-Allow-Origin "http://localhost:3000"
        Access-Control-Allow-Credentials "true"
        Access-Control-Expose-Headers "Content-Type, Authorization, X-Tenant-ID"
    }
    
    # Enhanced logging for CORS debugging
    log {
        output file /var/log/caddy/access.log
        format json {
            timestamp
            request>remote_ip
            request>method
            request>uri
            request>headers>Origin
            status
            latency
            size
        }
    }
    
    # Security: Secure error handling without wildcard CORS
    handle_errors {
        # Security: Only set CORS headers for known origins during errors
        @error_cors_production header Origin "https://app.zebra.associates"
        @error_cors_localhost header Origin "http://localhost:3001"
        @error_cors_dev header Origin "http://localhost:3000"
        @error_cors_vercel header Origin "https://frontend-5r7ft62po-zebraassociates-projects.vercel.app"
        
        handle @error_cors_production {
            header Access-Control-Allow-Origin "https://app.zebra.associates"
            header Access-Control-Allow-Credentials "true"
        }
        
        handle @error_cors_localhost {
            header Access-Control-Allow-Origin "http://localhost:3001"
            header Access-Control-Allow-Credentials "true"
        }
        
        handle @error_cors_dev {
            header Access-Control-Allow-Origin "http://localhost:3000"
            header Access-Control-Allow-Credentials "true"
        }
        
        handle @error_cors_vercel {
            header Access-Control-Allow-Origin "https://frontend-5r7ft62po-zebraassociates-projects.vercel.app"
            header Access-Control-Allow-Credentials "true"
        }
        
        # Security: Generic error response without exposing internal details
        respond "Service Error" {http.error.status_code}
    }
}