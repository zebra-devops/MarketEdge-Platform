# Railway Production Environment Variables Template
# Copy this file and set actual values in Railway dashboard

# Application Configuration
PROJECT_NAME="Platform Wrapper"
PROJECT_VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG="false"
LOG_LEVEL="INFO"

# Database Configuration (Railway PostgreSQL)
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:password@host:port/railway"

# Redis Configuration (Railway Redis)
# Format: redis://default:password@host:port
REDIS_URL="redis://default:password@host:port"
REDIS_PASSWORD="your_redis_password"
REDIS_SSL_ENABLED="true"

# Rate Limiting Storage (separate Redis DB)
RATE_LIMIT_STORAGE_URL="redis://default:password@host:port/1"

# JWT Configuration
JWT_SECRET_KEY="your_super_secret_jwt_key_at_least_32_characters_long"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="30"
REFRESH_TOKEN_EXPIRE_DAYS="7"

# Auth0 Configuration
AUTH0_DOMAIN="your-tenant.auth0.com"
AUTH0_CLIENT_ID="your_auth0_client_id"
AUTH0_CLIENT_SECRET="your_auth0_client_secret"
AUTH0_CALLBACK_URL="https://your-frontend-domain.railway.app/callback"

# CORS Configuration (Railway frontend URL)
CORS_ORIGINS="https://your-frontend-domain.railway.app,https://your-custom-domain.com"

# Rate Limiting Configuration
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_REQUESTS_PER_MINUTE="60"
RATE_LIMIT_BURST_SIZE="10"
RATE_LIMIT_TENANT_REQUESTS_PER_MINUTE="1000"
RATE_LIMIT_ADMIN_REQUESTS_PER_MINUTE="5000"

# Redis Production Configuration
REDIS_CONNECTION_POOL_SIZE="50"
REDIS_HEALTH_CHECK_INTERVAL="30"
REDIS_SOCKET_CONNECT_TIMEOUT="5"
REDIS_SOCKET_TIMEOUT="2"

# Supabase Configuration (Data Layer)
DATA_LAYER_SUPABASE__URL="https://your-project.supabase.co"
DATA_LAYER_SUPABASE__KEY="your_supabase_anon_key"

# Railway-specific (set automatically)
PORT="8000"
RAILWAY_ENVIRONMENT="production"